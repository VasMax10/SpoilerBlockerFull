@model IEnumerable<SpoilerBlockerFull.Models.Category>

@{
    ViewData["Title"] = "Index";
}

<link rel="stylesheet" href="~/css/BookFlipCards.css" />

<style>
    
</style>
<style media="screen">
    
    .mini-btn {
        font-size: 20px;
        margin: -30px 0px 0px 0px;
        padding: 0px 10px 0px 10px;
    }
</style>


<h1>Index</h1>

<p>
    <a asp-action="Create" class="btn btn-warning">Create New</a>
    <a asp-action="ImportMovie" class="btn btn-warning">Import Movie From TMDB</a>
    <a asp-action="ImportTV" class="btn btn-warning">Import TV-series From TMDB</a>
</p>


<div class="row mb-4 wow fadeIn justify-content-center">
    @foreach (var item in Model)
    {
    <div class="card" style="margin-left:30px">
        <div class="img-container">
            <img src="https://www.themoviedb.org/t/p/w600_and_h900_bestv2@(item.PosterPath)" alt="" />
        </div>
        <div class="card-details">
        <div style="text-align:end">
            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-secondary mini-btn">Edit</a>
            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger mini-btn" style="margin-right:-15px">Delete</a>
        </div>

        <h2 style="margin-top:-30px">@item.Name</h2>
        <br />
        <div style="text-align: center; position:fixed; bottom:10px;">
            <a asp-controller="Keywords" asp-action="Index" asp-route-categoryId="@item.Id" class="btn btn-info" style="width:145px">Characters</a>
        </div>
    </div>
    </div>}
</div>

