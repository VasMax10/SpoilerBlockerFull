@model IEnumerable<SpoilerBlockerFull.Models.Keyword>

@{
    ViewData["Title"] = "Index";
}

<link rel="stylesheet" href="~/css/keywords.css" />

<style media="screen">
body { background-image: url( "https://www.themoviedb.org/t/p/original@(ViewBag.backDrop)" ); 
       height: 100%; 
       background-attachment: fixed; 
       background-position: center; 
       background-repeat: no-repeat; 
       background-size: cover; }
    
</style>

<article class="leaderboard">
    <!--<header>
        <h1 class="leaderboard__title">
            <span class="leaderboard__title--top">@ViewBag.categoryName</span>
            <span class="leaderboard__title--bottom">Keywords</span>
        </h1>

    </header>-->

    <div class="leaderboard__profiles">
        <article class="leaderboard__profile">
            <h1>
                <span>@ViewBag.categoryName</span>
                <span>Keywords</span>
            </h1>
            <a class="leaderboard__value btn btn-light" asp-action="Create" asp-route-categoryId="@ViewBag.categoryId" style="width:100%; height:100%">
                <img src="~/images/add-icon.png" width="50" />
            </a>
        </article>
        @foreach (var item in Model)
        {
            <article class="leaderboard__profile">
                <span class="leaderboard__name">@item.Name</span>

                <a class="leaderboard__value btn btn-warning" asp-action="Edit" asp-route-id="@item.Id" style="width:50px">
                    <img src="~/images/edit-icon.png" width="25" />
                </a>
                <a class="leaderboard__value btn btn-danger" asp-action="Delete" asp-route-id="@item.Id" style="width:50px">
                    <img src="~/images/delete-icon.png" width="25" />
                </a>
            </article>
        }
    </div>
</article>
